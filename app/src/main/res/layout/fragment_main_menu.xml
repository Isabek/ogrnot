<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/main_menu_linear_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:visibility="invisible"
            android:paddingBottom="50dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/student_number_label"
                    android:text="@string/student_number_tr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="#48484a"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/student_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#48484a"
                    android:paddingLeft="0dip"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="0dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/faculty_label"
                    android:text="@string/faculty_tr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="#48484a"
                    android:textStyle="normal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textSize="16sp"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dp"
                    android:gravity="right"/>

                <TextView
                    android:id="@+id/faculty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#48484a"
                    android:paddingLeft="0dip"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="0dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/department_label"
                    android:text="@string/department_tr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="#48484a"
                    android:textStyle="normal"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textSize="16sp"
                    android:gravity="right"/>

                <TextView
                    android:id="@+id/department"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#48484a"
                    android:paddingLeft="0dip"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="0dp"/>
            </LinearLayout>
        </LinearLayout>

    <ProgressBar
        android:id="@+id/main_menu_progressbar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:indeterminate="true" />
</LinearLayout>